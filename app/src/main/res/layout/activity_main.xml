<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryPurple"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/rajdhani_medium"
        android:fontWeight="600"
        android:gravity="center"
        android:text="@string/main_text"
        android:textColor="@color/DisabledGray"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/login_btn_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signup_btn_main"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="@dimen/main_btn_height"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/SecondaryGreen"
        android:text="@string/signup_btn_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/login_btn_main"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="@dimen/main_btn_height"

        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/SecondaryGreen"
        android:text="@string/login_btn_title"
        android:textColor="@color/TextWhite"
        app:layout_constraintBottom_toBottomOf="@+id/signup_btn_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_btn_main"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rajdhani_bold"
        android:text="@string/txtAppNameMainActivity"
        android:textColor="@color/SecondaryGreen"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_main"
        app:layout_constraintEnd_toEndOf="@+id/tv_main"
        app:layout_constraintStart_toStartOf="@+id/tv_main"
        app:layout_constraintTop_toTopOf="@+id/tv_main" />

</androidx.constraintlayout.widget.ConstraintLayout>